<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

		<include layout="@layout/layout_animated_cell"
            android:id="@+id/sections_now_playing_grid"/>
		<include layout="@layout/layout_animated_cell"
            android:id="@+id/sections_popular_grid"/>
        <include layout="@layout/layout_animated_cell"
            android:id="@+id/sections_top_rated_grid"/>
        <include layout="@layout/layout_animated_cell"
            android:id="@+id/sections_upcoming_grid"/>
        
    </LinearLayout>

</ScrollView>