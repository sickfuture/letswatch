<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.android.sickfuture.sickcore.image.view.RecyclingImageView
        android:id="@+id/image_view_hlist_item_picture"
        android:layout_width="88dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@color/AliceBlue" />

    <TextView
        android:id="@+id/text_view_hlist_item_title"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@id/image_view_hlist_item_picture"
        android:layout_alignBottom="@id/image_view_hlist_item_picture"
        android:background="@drawable/background_gradient_dark"
        android:gravity="bottom|left"
        android:singleLine="true"
        android:padding="8dp"
        android:shadowColor="@color/Black"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text="@string/app_name"
        android:textColor="@color/LightGrey"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
