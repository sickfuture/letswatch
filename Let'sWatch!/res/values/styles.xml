<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="styleMainListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#19000000</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>
    <style name="styleImageViewPosterOnMainScreen">
        <item name="android:contentDescription">@string/content_description</item>
        <item name="android:layout_width">@dimen/dim_poster_width</item>
        <item name="android:layout_height">@dimen/dim_poster_height</item>
        <item name="android:scaleType">centerCrop</item>
        
    </style>
    <style name="styleFilmTitleOnMainScreen" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/FireBrick</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="styleTextDescription" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">8dip</item>
        <item name="android:maxLines">8</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="styleMppaOnMainScreen" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>
    <style name="styleSectionTitle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="styleSelectableLayout">
        <item name="android:background">@drawable/selector_section</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="styleImagePostersGrid">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">208dp</item>
        <item name="android:background">@color/AliceBlue</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="styleTitlePostersGrid" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/background_gradient_dark</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:padding">8dp</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="styleInfoPostersGrid" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/blackish</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="styleTextViewCover" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/LightGrey</item>
    </style>
</resources>